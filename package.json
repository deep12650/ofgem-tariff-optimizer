{
  "name": "ofgem-tariff-optimizer",
  "version": "0.1.0",
  "description": "UK Ofgem-style tariff optimiser for half-hourly smart meter data. Compare flat, Economy 7, and Agile tariffs and get cheapest schedules for appliances.",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "ofgem-compare": "bin/compare.js"
  },
  "keywords": [
    "uk",
    "energy",
    "tariff",
    "octopus",
    "ofgem",
    "economy7",
    "agile",
    "smart-meter",
    "halfhourly",
    "optimizer"
  ],
  "author": "You",
  "license": "MIT",
  "devDependencies": {
    "c8": "^9.1.0"
  },
  "scripts": {
    "test": "node --test",
    "coverage": "c8 --reporter=text --reporter=lcov -- node --test",
    "coverage:html": "c8 --reporter=html -- node --test",
    "coverage:check": "c8 --check-coverage --branches=80 --functions=80 --lines=80 --statements=80 -- node --test"
  },
  "c8": {
    "exclude": [
      "test/**",
      "examples/**",
      "bin/**",
      "coverage/**",
      "**/*.test.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true
  }
}